<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to game_name, root_path, id: "logo" %>
        <ul class="nav pull-right">
	<% if signed_in? %>
	  <li class="navbar-text">Welcome <%= current_user.name %></li>
	  <li class="divider-vertical"></li>
	  <li><%= link_to raw("<i class=\"icon-home icon-white\"></i> "), root_path %></li>
	  <li><%= link_to "Play Game", game_path %></li>
	  <li><%= link_to "Players", players_path %></li>
          <li><%= link_to "Account", account_path %></li>
          <li><%= link_to "Logout", signout_path, method: 'delete' %></li>
        <% else %>
	  <li><%= link_to raw("<i class=\"icon-home icon-white\"></i> Home"), root_path %></li>
          <li><%= link_to "Login", login_path %></li>
          <li><%= link_to "Create Account", signup_path %></li>
	<% end %>
      </ul>
    </div>
  </div>
</header>